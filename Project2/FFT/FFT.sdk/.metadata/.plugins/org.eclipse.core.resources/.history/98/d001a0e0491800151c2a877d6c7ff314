/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include <xil_io.h>
#include "xparameters.h"
#include "xscugic.h"
#include "xaxidma.h"
#define TIMER_COUNTER_0 0
#define SIZE  4096
// first DMA for HP port
XAxiDma AxiDma;
/////////////////////////////////////////////////
//
//     initialize first DMA function
//
/////////////////////////////////////////////////
int init_dma(){
	XAxiDma_Config *CfgPtr;
	int status;

	CfgPtr = XAxiDma_LookupConfig(XPAR_AXI_DMA_0_DEVICE_ID);
	if(!CfgPtr){
		print("Error looking for AXI DMA config\n\r");
		return XST_FAILURE;
	}
	status = XAxiDma_CfgInitialize(&AxiDma,CfgPtr);
	if(status != XST_SUCCESS){
		print("Error initializing DMA 0\n\r");
		return XST_FAILURE;
	}
	//check for scatter gather mode
	if(XAxiDma_HasSg(&AxiDma)){
		print("Error DMA configured in SG mode\n\r");
		return XST_FAILURE;
	}
	/* Disable interrupts, we use polling mode */
	XAxiDma_IntrDisable(&AxiDma, XAXIDMA_IRQ_ALL_MASK,XAXIDMA_DEVICE_TO_DMA);
	XAxiDma_IntrDisable(&AxiDma, XAXIDMA_IRQ_ALL_MASK,XAXIDMA_DMA_TO_DEVICE);

	return XST_SUCCESS;
}

int main()
{
	;
	int status;
	int temp,i,j,k=0;
	int re,im;
	static int Result1[SIZE];
    init_platform();

    //  Initialize dma
    init_dma();
    //get data from the PL block to DDR Ram
    status = XAxiDma_SimpleTransfer(&AxiDma, 0xa000000, 4096,XAXIDMA_DEVICE_TO_DMA);
    /* Wait for transfer to be done */
    while(XAxiDma_Busy(&AxiDma, XAXIDMA_DEVICE_TO_DMA));
    j=0;
    // read data from DDR ram to variable Result1
    for(i=0;i<=4*4095;i+=4)
    	{
    	  j+=1;
    	  Result1[j] = Xil_In32(0xa000000+i);

    	  re = (short)Result1[j];
    	  im = (short)(Result1[j] >> 16);

    	  if (j % 4 != 0){
    		  xil_printf("j=%d : re = %d; im = %d  ", j, re, im);
    	  }
    	  else{
    		  xil_printf("\n\r");
    		  xil_printf("j=%d : re = %d; im = %d  ", j, re, im);
    	  }
    	}
    // here the data from FFT is stored in ram then
    // the data from ram is send to UART
    // rad data from DDR ram to UART
	/*for(i=0;i<=4*4095;i+=4)
	{
		k++;
		temp = Xil_In32(0xa000000+i);
		re = (short)temp;
		im = (short)(temp >> 16);

		//xil_printf("DDR address 0x%x",0xa0000000+i);
		//xil_printf(" contains %d\n\r",(short)temp);
		//xil_printf(" X(%d) = %d + %d*j\n\r", k,re,im);
	}*/
    return 0;
}
